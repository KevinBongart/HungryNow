<div class="hero-unit">
  <h1>What do you want to eat?</h1>

  <p>
    <%= form_for(@search) do |f| %>
    <div class="clearfix">
      <div class="input">
        <%= f.text_field :text, :class => "xlarge", :value => @value %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "I'm hungry", :class => "btn primary large" %>
    </div>
    <% end %>
  </p>
</div>
